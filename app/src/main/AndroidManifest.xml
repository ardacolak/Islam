<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Location (GPS-based prayer times) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Exact Alarm for ezan -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- Pil optimizasyonundan muaf tut (Xiaomi/Huawei/Oppo gibi OEM'lerde ezan için) -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />


    <!-- Re-schedule alarms after reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Wake lock for WorkManager -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Foreground Service (API 28+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!--
        Foreground Service type: mediaPlayback (API 29+).
        Android 14 (API 34) bu izni manifest'te zorunlu kılar.
    -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <application
        android:name=".IslamApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Islam"
        tools:targetApi="31">

        <!-- Single Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Islam"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Prayer Alarm Receiver: fired by AlarmManager at exact prayer times -->
        <receiver
            android:name=".notification.PrayerAlarmReceiver"
            android:exported="false" />

        <!-- Boot Receiver: re-schedules alarms after device restart -->
        <receiver
            android:name=".notification.BootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!--
            Ezan Foreground Service.
            foregroundServiceType="mediaPlayback":
              - Android 10 (API 29)+: arka planda medya çalma için gerekli.
              - Android 14 (API 34)+: startForeground() çağrısına da tip verilmeli
                (EzanForegroundService içinde ServiceInfo.FOREGROUND_SERVICE_TYPE_MEDIA_PLAYBACK).
        -->
        <service
            android:name=".services.EzanForegroundService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

    </application>

</manifest>
